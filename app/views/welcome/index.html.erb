<% if current_user %>
  <h3>Welcome: <%= current_user.email %></h3>
<% else %>
  <div class="jumbotron">
    <h2>Welcome to the Photo Management App!</h2>
    <p class="lead">
      You'll love managing your Photos with our application. Sign up!
    </p>
  </div>

  <div class="row">
    <div class="col-lg-3 offset-3 ">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Premium Plan</h5>
          <h6 class="card-subtitle mb-2 text-muted">Price: $10</h6>
          <p class="card-text">
          <div class="features pb-2">
            <ul>
              <li>Unlimited Image Uploads</li>
              <li>Responsive design</li>
              <li>Access anywhere</li>
            </ul>
          </div>
          </p>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
        </div>
      </div>
    </div>
    <div class="col-lg-3">

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Amaze Plan</h5>
          <h6 class="card-subtitle mb-2 text-muted">Price: $20</h6>
          <p class="card-text">
          <div class="features">
            <ul>
              <li>Unlimited Image Uploads</li>
              <li>Responsive design</li>
              <li>Access anywhere</li>
              <li class='extra'>Unlimited projects</li>
            </ul>
          </div>
          </p>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up mx-auto' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
